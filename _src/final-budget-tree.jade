block title
  h1 Detailed Breakdown: Final Budget

block datasource
  h6
    | Data source:&nbsp;
    a(href = "https://data.world/citizenlabs/city-of-wyoming") City of Wyoming | Citizen Labs Data Collaborative


block datafiles
  script.
    var config = {
      /* set values available in dropdown files */
      dropdown_values: {
        "Year": ["FY19", "FY20"],
        "Account": ["Revenue", "Expense"]
      },
      /* set the default values */
      dropdown_choice: {
        "Year": "FY20",
        "Account": "Expense"
      },
      /* create the url to the data file based on the dropdown choices */
      url: function() {
        return 'data/tree/Final.' + this.dropdown_choice["Account"] + "." + this.dropdown_choice["Year"] + ".json";
      }
    };
